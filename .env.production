# Configuración de entorno para producción
NODE_ENV=production
PORT=3000

# CORS Configuration para Cloudflare Tunnel
CORS_ORIGIN=https://trustlabwordle.alvarohr.es,http://localhost:53880,http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=file:./local.db

# App Configuration
APP_NAME=Wordle tRPC
APP_VERSION=1.0.0

# Security
TRUST_PROXY=true

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Static Files
SERVE_STATIC=true

# Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration (si aplica)
SESSION_SECRET=your-session-secret-change-this-in-production

# API Configuration
API_BASE_URL=https://trustlabwordle.alvarohr.es
WEB_BASE_URL=https://trustlabwordle.alvarohr.es
